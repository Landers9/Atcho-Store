<% content_for :head do %>
    <!-- title -->
    <title>Shop | Recovery</title>
    <%= stylesheet_link_tag    'all.min.css' %>
    <%= stylesheet_link_tag    'bootstrap.min.css' %>
    <%= stylesheet_link_tag    'owl.carousel.css' %>
    <%= stylesheet_link_tag    'magnific-popup.css' %>
    <%= stylesheet_link_tag    'animate.css' %>
    <%= stylesheet_link_tag    'meanmenu.min.css' %>
    <%= stylesheet_link_tag    'main.css' %>
    <%= stylesheet_link_tag    'responsive.css' %>
<% end %>


<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 offset-lg-2 text-center">
        <div class="breadcrumb-text">
          <p>Bénéficiez d'une assistance 24h/24 et 7j/7</p>
          <h2  class="text-white">Récupérer votre mot de passe</h2>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- end breadcrumb section -->

<!-- contact form -->
<div class="contact-from-section mt-150 mb-150">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 mb-5 mb-lg-0 col-12">
        <div class="form-title text-center">
        <h2>Vous avez oublié votre mot de passe ?</h2>
          <!-- <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Pariatur, ratione! Laboriosam est, assumenda. Perferendis, quo alias quaerat aliquid. Corporis ipsum minus voluptate? Dolore, esse natus!</p> -->
        </div>
        <div id="form_status"></div>
        <div class="login-form">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "m-auto", id: "fruitkha-contact", onSubmit: "return valid_datas( this );", style: "width: 70%;position: relative;" }) do |f| %>
            <div class="m-4">
              <%= render "devise/shared/error_messages", resource: resource %>
            </div>
            <div class="field form-group m-4">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "email" %>
            </div>

            <div class="actions form-group text-center m-4">
              <%= f.submit "Envoyer", style: "position:relative;", class: "px-5 py-2" %>
            </div>
            <div class="text-center m-4">
              <%= render "devise/shared/links" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>




<%= javascript_include_tag 'jquery-1.11.3.min.js' %>
<%= javascript_include_tag 'bootstrap.min.js' %>
<%= javascript_include_tag 'jquery.countdown.js' %>
<%= javascript_include_tag 'jquery.isotope-3.0.6.min.js' %>
<%= javascript_include_tag 'waypoints.js' %>
<%= javascript_include_tag 'owl.carousel.min.js' %>
<%= javascript_include_tag 'jquery.magnific-popup.min.js' %>
<%= javascript_include_tag 'jquery.meanmenu.min.js' %>
<%= javascript_include_tag 'sticker.js' %>
<%= javascript_include_tag 'main.js' %>

